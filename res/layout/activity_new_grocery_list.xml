<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C2FAC0"
    tools:context="com.example.obigrocery.screen.NewGroceryList" >

    <EditText
        android:id="@+id/listTextbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Shopping List Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_item_box"
        android:padding="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Item" />

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/itemNameTextbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:ems="10"
                    android:hint="Item name" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/quantityTextbox"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.02"
                    android:background="#ffffff"
                    android:ems="10"
                    android:hint="Quantity" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    android:text=" units of"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/unitSpinner"
                    android:layout_width="96dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.02" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Category" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" >

            <Button
                android:id="@+id/addGroceryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="addGroceryItem"
                android:text="Add Item" />

            <Button
                android:id="@+id/chooseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="chooseList"
                android:text="Choose" />

            <Button
                android:id="@+id/suggestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="suggestList"
                android:text="Suggest" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <ListView
	        android:id="@+id/itemView"
	        style="@style/ObiItemsView"
	        android:layout_width="wrap_content"
	        android:layout_height="164dp"
        	android:choiceMode="singleChoice"
	        android:fadeScrollbars="false" >
	    </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/menuButton"
            style="@style/ObiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:onClick="returnToMenu"
            android:text="Cancel" />

        <Button
            android:id="@+id/finishGroceryButton"
            style="@style/ObiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="finishGroceryList"
            android:text="Finish" />

    </LinearLayout>

</LinearLayout>